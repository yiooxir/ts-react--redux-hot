{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "utils/*": ["./src/utils/*"],
            "components/*": ["./src/components/*"],
            "interfaces/*": ["./src/interfaces/*"],
            "actions/*": ["./src/actions/*"]
        },
        "types": [
            "webpack-env",
            "node",
            "mocha"
        ],
        "lib": [
            "dom",
            "es5",
            "es6",
            "es7",
            "scripthost",
            "es2015.iterable"
        ]
    }
}
